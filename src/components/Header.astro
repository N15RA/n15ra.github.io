---
import { getCurrentLocale, useTranslations } from '../i18n/utils';
import LanguageSwitcher from './LanguageSwitcher.astro';

const currentLocale = getCurrentLocale(Astro.url.pathname);
const t = useTranslations(currentLocale);

const navItems = [
  { href: '/', label: t('nav.home') },
  { href: '/#about', label: t('nav.about') },
  { href: '/#events', label: t('nav.events') },
  { href: '/courses', label: t('nav.courses') },
  { href: '/#join', label: t('nav.join') },
];

// Adjust links for English locale
const getLocalizedHref = (href: string) => {
  if (currentLocale === 'en' && href === '/') {
    return '/en';
  }
  if (currentLocale === 'en' && href === '/courses') {
    return '/en/courses';
  }
  if (currentLocale === 'en' && href.startsWith('/#')) {
    return `/en${href}`;
  }
  return href;
};
---

<header class="navbar bg-base-300 shadow-lg fixed top-0 z-50">
  <div class="navbar-start">
    <!-- Mobile menu -->
    <div class="dropdown">
      <div tabindex="0" role="button" class="btn btn-ghost lg:hidden">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-5 w-5"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h8m-8 6h16" />
        </svg>
      </div>
      <ul tabindex="0" class="menu menu-sm dropdown-content bg-base-300 rounded-box z-50 mt-3 w-52 p-2 shadow">
        {
          navItems.map((item) => (
            <li>
              <a href={getLocalizedHref(item.href)}>{item.label}</a>
            </li>
          ))
        }
      </ul>
    </div>

    <!-- Logo -->
    <a href={currentLocale === 'en' ? '/en' : '/'} class="btn btn-ghost text-xl font-bold">
      <img src="/images/logos/logo-sm.png" alt="NISRA Logo" class="h-8 w-auto" />
      <span class="hidden sm:inline text-primary">NISRA</span>
    </a>
  </div>

  <!-- Desktop menu -->
  <div class="navbar-center hidden lg:flex">
    <ul class="menu menu-horizontal px-1">
      {
        navItems.map((item) => (
          <li>
            <a href={getLocalizedHref(item.href)} class="hover:text-primary transition-colors">
              {item.label}
            </a>
          </li>
        ))
      }
    </ul>
  </div>

  <div class="navbar-end">
    <LanguageSwitcher />
  </div>
</header>

<!-- Spacer for fixed header -->
<div class="h-16"></div>
