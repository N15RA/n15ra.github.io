---
interface Officer {
  name: string;
  position: string;
}

interface Props {
  year: string;
  academicYear: string;
  groupPhoto?: string;
  officers: Officer[];
  noPhotoText: string;
}

const { year, academicYear, groupPhoto, officers, noPhotoText } = Astro.props;
---

<div class="card bg-base-200 shadow-xl">
  <div class="card-body">
    <h3 class="card-title text-2xl text-primary mb-4">
      {year} 學年度
      <span class="text-base font-normal opacity-70">({academicYear})</span>
    </h3>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Group Photo -->
      <div class="flex items-center justify-center">
        {
          groupPhoto ? (
            <img
              src={groupPhoto}
              alt={`${year} 學年度團體照`}
              class="rounded-lg shadow-md max-h-64 object-cover"
            />
          ) : (
            <div class="bg-base-300 rounded-lg w-full h-48 flex items-center justify-center">
              <div class="text-center opacity-50">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-12 w-12 mx-auto mb-2"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
                  />
                </svg>
                <p class="text-sm">{noPhotoText}</p>
              </div>
            </div>
          )
        }
      </div>

      <!-- Officers List -->
      <div>
        <h4 class="font-semibold mb-3 opacity-80">幹部名單</h4>
        <div class="overflow-x-auto">
          <table class="table table-sm">
            <tbody>
              {
                officers.map((officer) => (
                  <tr>
                    <td class="font-medium text-primary">{officer.position}</td>
                    <td>{officer.name}</td>
                  </tr>
                ))
              }
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
