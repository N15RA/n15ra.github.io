---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { getCurrentLocale } from "../i18n/utils";

interface Props {
  title: string;
  description?: string;
}

const { title, description = "NISRA - 輔仁大學資訊安全研究社" } = Astro.props;
const currentLocale = getCurrentLocale(Astro.url.pathname);
const htmlLang = currentLocale === "zh-TW" ? "zh-Hant-TW" : "en";

// Calculate correct alternate language URLs
const basePath = Astro.url.pathname.startsWith("/en")
  ? Astro.url.pathname.replace(/^\/en/, "") || "/"
  : Astro.url.pathname;
const zhUrl = new URL(basePath, Astro.site).href;
const enUrl = new URL(basePath === "/" ? "/en" : `/en${basePath}`, Astro.site).href;

// Canonical URL (use current page URL)
const canonicalUrl = new URL(Astro.url.pathname, Astro.site).href;
---

<!doctype html>
<html lang={htmlLang} data-theme="nisra">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:site_name" content="NISRA" />
    <meta
      property="og:locale"
      content={currentLocale === "zh-TW" ? "zh_TW" : "en_US"}
    />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <!-- Alternate language links -->
    <link rel="alternate" hreflang="zh-TW" href={zhUrl} />
    <link rel="alternate" hreflang="en" href={enUrl} />
    <link rel="alternate" hreflang="x-default" href={zhUrl} />

    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col bg-base-100 text-base-content">
    <Header />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />
  </body>
</html>
